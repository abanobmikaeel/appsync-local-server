{
  "name": "appsync-local-server",
  "version": "0.0.5",
  "description": "A tool for running and testing appsync javascript resolvers locally ",
  "keywords": [
    "appsync",
    "local",
    "server",
    "graphql"
  ],
  "license": "MIT",
  "author": "Abanob Mikaeel",
  "homepage": "https://github.com/abanobmikaeel/appsync-local#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abanobmikaeel/appsync-local.git"
  },
  "bugs": {
    "url": "https://github.com/abanobmikaeel/appsync-local/issues"
  },
  "type": "module",
  "main": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "bin": {
    "appsync-local": "bin/appsync-local.js"
  },
  "scripts": {
    "prepare": "echo \"No build needed\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=integration",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=unit"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@aws-sdk/client-dynamodb": "^3.859.0",
    "@aws-sdk/lib-dynamodb": "^3.859.0",
    "@graphql-tools/graphql-file-loader": "^8.0.22",
    "@graphql-tools/load": "^8.1.2",
    "@graphql-tools/schema": "^10.0.25",
    "acorn": "^8.15.0",
    "commander": "^14.0.0",
    "graphql": "^16.11.0",
    "zod": "^4.0.14"
  },
  "files": [
    "bin/",
    "src/",
    "index.js",
    "README.md",
    "LICENSE"
  ]
}
