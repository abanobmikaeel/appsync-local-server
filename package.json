{
  "name": "appsync-local-server",
  "version": "1.3.0",
  "description": "A tool for running and testing AppSync JavaScript resolvers locally",
  "keywords": [
    "appsync",
    "local",
    "server",
    "graphql",
    "typescript",
    "aws"
  ],
  "license": "MIT",
  "author": "Abanob Mikaeel",
  "homepage": "https://github.com/abanobmikaeel/appsync-local-server#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abanobmikaeel/appsync-local-server.git"
  },
  "bugs": {
    "url": "https://github.com/abanobmikaeel/appsync-local-server/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/appsyncUtilsShim.d.ts",
      "import": "./dist/appsyncUtilsShim.js"
    },
    "./dynamodb": {
      "types": "./dist/dynamodb.d.ts",
      "import": "./dist/dynamodb.js"
    }
  },
  "bin": {
    "appsync-local": "dist/bin/appsync-local.js"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "dev": "npm run build && tsx watch bin/appsync-local.ts start",
    "start": "npm run build && tsx bin/appsync-local.ts start",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "pretest": "npm run build",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=integration",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=unit",
    "test:e2e": "NODE_OPTIONS='--experimental-vm-modules' jest --testPathPatterns=e2e --runInBand",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.6",
    "@types/pg": "^8.11.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jsonwebtoken": "^9.0.3",
    "supertest": "^7.2.2",
    "ts-jest": "^29.2.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@apollo/server": "^5.2.0",
    "@aws-appsync/utils": "^2.0.3",
    "@aws-sdk/client-dynamodb": "^3.966.0",
    "@aws-sdk/lib-dynamodb": "^3.966.0",
    "@graphql-tools/graphql-file-loader": "^8.1.9",
    "@graphql-tools/load": "^8.1.8",
    "@graphql-tools/schema": "^10.0.25",
    "acorn": "^8.15.0",
    "commander": "^14.0.2",
    "graphql": "^16.12.0",
    "mysql2": "^3.11.0",
    "pg": "^8.13.0",
    "zod": "^4.3.5"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
